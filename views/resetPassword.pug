extends base

block content
  main.reset-passwordform
    section
      h1#loginHeading.heading-secondary.login-form__heading.u-center-text.u-margin-top-big Reset Password
      .row
        form#reset-passwordForm.col.s12
          .input-field.col
            input#password(type='password')
            label#passwordLabel.login-from__input(for='password') Password
          .input-field.col
            input#passwordConfirm(type='password')
            label#passwordConfirmLabel.login-form__input(for='passwordConfirm') Password Confirm 
          .col.row
            button.login-from__input-button(type='submit') Submit
