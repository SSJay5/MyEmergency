extends base

block content
  main
  section.form-user-data
    h1 Your Account Details
    form#updateUserDetails-form
      .row
        .input-field.col.s6
          input#name.validate(type='text' value=`${user.name}`) 
          label(for='name')= 'Name'
      .row
        .input-field.col.s6
          input#email.validate(type='email' value=`${user.email}`)
          label(for='email')= 'Email'
      .row
        .form-user-data__profile-photo
          img(src=`/img/user/${user.photo}`, alt='User photo')
        div
          input.form__upload(type='file', accept='image/*', id='photo', name='photo')
      input(type='submit')
